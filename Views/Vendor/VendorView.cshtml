        //$('#subCatInputId_' + id).show();
    }

    function editVendorSubCategory(subCategoryId) {
        debugger;
        //User/Index
        var subCategoryName = $('#subCatInputId_' + subCategoryId).val();
        if (subCategoryName == "") {
            
            Swal.fire({
                position: 'top-end',
                icon: 'warning',
                title: 'Please enter Category Name.',
                showConfirmButton: false,
                timer: 1500
            });
            return;
        }
        $("#UpdateSubCategoryName").val(subCategoryName);
        $("#UpdateSubCategoryId").val(subCategoryId);
        return;
        f = new FormData($("#updateSubCategoryForm")[0]);

        $.ajax({
            type: "POST",
            async: "true",
            data: f,
            url: "/SubCategory/UpdateSubCategory",
            processData: false,
            contentType: false,
            success: function (data) {
                debugger;
                if (data == "success") {
                    
                    Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Sub Category updated successfully.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    window.location.href = '/Vendor/VendorView';
                }
                else {
                    Swal.fire({
                        position: 'top-end',
                        icon: 'warning',
                        title: 'Record not updated.',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    return;
                }
            },
            error: function () {
                debugger;
                alert("Error");
            }
        });
    }
</script>

