
@{
    ViewBag.Title = "Categories";
}
<script>
    function vendorSubCategories(cate , id) {
        location.href = '../vendor/SubCategories?vendorid='+id+'&&cate='+cate;
    }
</script>
<h2>Categories @ViewBag.id</h2>
<div style="display:flex">
    @{
        foreach (var catagory in ViewBag.Categories)
        {
            <div onclick="vendorSubCategories(@catagory.CategoryId ,@ViewBag.id )" style="height:100px; min-width:100px;margin:10px; text-align:center;padding:10px;border:1px solid black; background-color:blueviolet;">
                <h4>
                    @catagory.CategoryName
                </h4>
            </div>
        }
    }
</div>
