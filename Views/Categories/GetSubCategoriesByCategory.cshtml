<script>
    function SortSubCategorylistChange(selectedValue) {
        debugger;
        var selectedValueId = document.getElementById('SortList').value;
        var categoryId = document.getElementById('GetCategoryId').value;
        $.ajax({
            type: "GET",
            url: '/SubCategory/SortSubCategoryList?value=' + selectedValueId + "&&categoryId=" + categoryId,
            success: function (response) {
                debugger;
                $("#subCategoryList").html(response);
            }
        });
    }
</script>
