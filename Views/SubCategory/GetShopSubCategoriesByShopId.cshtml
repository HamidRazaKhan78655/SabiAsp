@model List<SabiAsp.Models.SubCategory>

@{
    if (Model.Count > 0)
    {
        <label>Sub Category :</label>
        <select class="form-control" id="shopSubCategorydrp" name="shopSubCategorydrp" required>
            @foreach (var item in Model)
            {
                <option value="@item.SubCategorieId">@item.name</option>
            }
        </select>
    }
    else
    {
        <label>Sub Category :</label>
        <select class="form-control" id="shopSubCategorydrp" name="shopSubCategorydrp" required></select>
    }
}



